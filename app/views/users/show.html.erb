<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
      <% if @user.avatar.nil? %>
        <%= gravatar_for @user %>
      <% else %>
        <%= image_tag @user.avatar.url %>  
      <% end %>
        <%= @user.name %>
        <br>
        <%= @user.provider if @user.provider.present? %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
